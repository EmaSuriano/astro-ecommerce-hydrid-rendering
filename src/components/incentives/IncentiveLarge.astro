---
type Props = {
  title: string;
  description: string;
  items: {
    icon: string;
    title: string;
    description: string;
  }[];
};

const { title, description, items } = Astro.props;
---

<h2>{title}</h2>
<p class="pe-md-12 me-lg-7">{description}</p>
<div class="row mt-5">
  {
    items.map((item) => (
      <div class="col-12 col-md-4 ">
        <i class={`fas text-5xl mb-4 ${item.icon}`} />
        <h6 class="text-sm">{item.title}</h6>
        <p class="text-sm opacity-8">{item.description}</p>
      </div>
    ))
  }
</div>
